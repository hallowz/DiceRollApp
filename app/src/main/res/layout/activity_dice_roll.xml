<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiceRollActivity"
    android:background="#2A2A37">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="You Rolled:"
            android:textAlignment="center"
            android:textColor="#B5872D"
            android:textSize="45dp"
            android:layout_column="0"
            android:layout_row="0"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#2DA5B5"
            android:textSize="45dp"
            android:id="@+id/CurrentDiceRoll"
            android:layout_column="0"
            android:layout_row="1"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Roll history"
            android:textAlignment="center"
            android:textColor="#B5872D"
            android:textSize="45dp"
            android:layout_column="0"
            android:layout_row="2"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:columnCount="5"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/HistoryA"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/HistoryB"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/HistoryC"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="3"
                android:id="@+id/HistoryD"/>
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:columnCount="5"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/HistoryE"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/HistoryF"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/HistoryG"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#2DA5B5"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="3"
                android:id="@+id/HistoryH"/>
        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#333E53"
            android:fontFamily="monospace"
            android:text="Go back"
            android:textColor="#9F521E"
            android:textSize="20dp"
            android:onClick="GoBack"/>
    </GridLayout>


</ScrollView>